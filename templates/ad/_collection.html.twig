{# Externalisation du template bootstrap #}

{% block _ad_images_widget %}
    <p>Vous pouvez ajouter vos propore images !</p>
    {{ form_widget(form) }}

    <input type="hidden" id="widgets-counter" value="0">       {# Les input sans 'name' ne sont pas soumis par le form #}

    <div class="form-group">
        <button type="button" id="add-image" class="btn btn-primary">
            Ajouter une image
        </button>
    </div>
{% endblock %}


{% block _ad_images_entry_row %}
    {{ form_widget(form)}}
{% endblock %}


{% block _ad_images_entry_widget %}                             {# Ajout d'un champ #}
    <div class="form-group" id="block_{{id}}">                  {# Ajout d'un id pour cibler plus facilement le champ #}
        <div class="row">
            <div class="col-10">
                <div class="row">
                    <div class="col">
                        {{ form_widget(form.url)}}
                    </div>
                    <div class="col">
                        {{ form_widget(form.caption)}}
                    </div>
                </div>
            </div>
            <div class="col-2">
                <button type="button"                           {# Ajout d'un btn delete #}
                        data-action="delete"                    {# action du button, sert de cible pour le JQuery #}
                        data-target="#block_{{id}}"             {# Idem mais il cible l'action du button (id du champ) #}
                        class="btn btn-danger">
                    X
                </button>
            </div>
        </div>
    </div>
{% endblock %}