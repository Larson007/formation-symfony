{% extends 'admin/base.html.twig' %}

{% block title %}Administration des annonces{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="my-5">Gestion des annonces</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {# On boucle sur chaque annonce "ad" du tableau "ads" importer depuis le Controller #}
            {% for ad in ads %}
            <tr>
                <td>{{ ad.id }}</td>
                <td>{{ ad.title }}</td>
                <td>
                    <img src="{{ ad.author.picture }}" alt="Avatar de {{ ad.author.fullName }}"
                        class="avatar avatar-micro mr-2"> {{ ad.author.fullName }}
                </td>
                <td>{{ ad.author.fullName }}</td>
                <td>
                    {# Lien vers la fontion edit de AdminAdController pour modifier une annonce #}
                    <a href="{{ path('admin_ads_edit', {'id': ad.id}) }}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                    {# Lien vers la fontion delete de AdminAdController pour supprimer une annonce #}
                    <a href="{{ path('admin_ads_delete', {'id': ad.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}